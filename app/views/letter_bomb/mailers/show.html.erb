<% content_for :head do %>
  <meta http-equiv="Content-Type" content="text/html; charset=<%= @mail.charset %>" />
  <style type="text/css">
    #message_headers {
      width: 100%;
      margin: 0;
      background: #fff;
      font-size: 12px;
      font-family: "Lucida Grande";
      border-bottom: 1px solid #dedede;
      overflow: hidden;
    }

    #message_headers dl {
      float: left;
      margin: 0 0 10px 0;
      padding: 0;
    }

    #message_headers dt {
      width: 100px;
      padding: 1px;
      float: left;
      text-align: right;
      font-weight: bold;
      color: #7f7f7f;
    }

    #message_headers dd {
      margin-left: 110px;
      padding: 1px;
    }

    #message_headers p.alternate {
      float: right;
      margin: 0;
    }

    #message_headers p.alternate a {
      color: #09c;
    }

    pre#message_body {
      padding: 10px;
      white-space: pre-wrap;
    }
  </style>
<% end %>

<div id="message_headers">
  <dl>
    <% if @mail.respond_to?(:smtp_envelope_from) && @mail.from != @mail.smtp_envelope_from %>
      <dt>SMTP-From:</dt>
      <dd><%= @mail.smtp_envelope_from %></dd>
    <% end %>

    <dt>From:</dt>
    <dd><%= @mail.from %></dd>

    <% if @mail.reply_to %>
      <dt>Reply-To:</dt>
      <dd><%= @mail.reply_to %></dd>
    <% end %>

    <dt>Subject:</dt>
    <dd><strong><%= @mail.subject %></strong></dd>

    <dt>Date:</dt>
    <dd><%= Time.now.strftime("%b %e, %Y %I:%M:%S %p %Z") %></dd>

    <% if @mail.respond_to?(:smtp_envelope_to) && @mail.to != @mail.smtp_envelope_to %>
      <dt>SMTP-To:</dt>
      <dd><%= @mail.smtp_envelope_to %></dd>
    <% end %>

    <dt>To:</dt>
    <dd><%= @mail.to %></dd>
  </dl>

  <% if @mail.multipart? %>
    <p class="alternate">
      <% if html_template? %>
        <a href="<%= @action %>.txt">View plain text version</a>
      <% else %>
        <a href="<%= @action %>.html">View HTML version</a>
      <% end %>
    </p>
  <% end %>
</div>

<% if html_template? %>
  <%= body_part.body.to_s.html_safe %>
<% else %>
  <pre id="message_body"><%= body_part.body %></pre>
<% end %>
